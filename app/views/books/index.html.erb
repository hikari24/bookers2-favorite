<%= render "layouts/error_messages" %>

<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
			<table class="table">
				<tr><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>

				<tr>
					<th>name</th>
					<th><%= current_user.name %></th>
			
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= current_user.introduction %></th>
				</tr>
			</table>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->
			<div class="row">
				<%= link_to '',edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
			</div>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
					<%= render 'books/book_index', book: book %>
					<% end %>

			</tbody>
		</table>

		<!--books一覧 -->


	</div>
</div>